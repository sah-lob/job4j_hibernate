<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:clinic;sql.enforce_size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sq</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping resource="ru/job4j/todo/models/Item.hbm.xml"/>
        <mapping resource="ru/job4j/carssale/models/BrandAndModel.hbm.xml"/>
        <mapping resource="ru/job4j/carssale/models/Image.hbm.xml"/>
        <mapping resource="ru/job4j/carssale/models/Person.hbm.xml"/>
        <mapping resource="ru/job4j/carssale/models/Car.hbm.xml"/>
    </session-factory>
</hibernate-configuration>